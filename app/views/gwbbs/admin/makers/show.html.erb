<div class="piece bbs">
<div class="pieceHeader">
  <h2>掲示板</h2>
</div>
<div class="pieceBody">

<div class="editingBox">
  <span class="btEdit"><%= link_to '編集', edit_gwbbs_maker_path(@item) + "?state=#{params[:state]}" %></span>
  <span class="btDestroy"><%= link_to '削除', gwbbs_maker_path(@item), confirm: '削除をすると元に戻せません。削除しますか', method: :delete %></span>
  <% if @item.form_name == 'form009' %>
    <span class="docLink">
      <%= link_to 'CSV出力 >>', "/gwbbs/csv_exports/#{@item.id}" %>
      <%= link_to '分類編集画面へ >>', @item.categorys_path %>
      <%= link_to '公開画面へ >>', @item.docs_path %>
    </span>
  <% else %>
    <span class="docLink">
      <%= link_to '分類編集画面へ >>', @item.categorys_path %>
      <%= link_to '公開画面へ >>', @item.docs_path %>
    </span>
  <% end %>
</div>

<table class="show">
  <tr>
    <th>状態</th>
    <td><%= @item.states[@item.state] %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th>掲示板タイトル</th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th>一覧表示行数</th>
    <td><%= @item.default_limit %></td>
  </tr>
</table>

<%= render '/gwboard/admin/adms/show' %>

<div class="btReturn">
  <%= link_to '管理一覧へ戻る', gwbbs_makers_path + "?state=#{params[:state]}" %>
</div>

</div>
</div><!--piece gwfaq-->
