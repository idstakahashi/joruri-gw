<%#
@cabinet_title は、Doclibrary::Public::CabinetsController で初期化しています。
%>
<div class="piece docLibrary">
<div class="pieceHeader">
  <h2><%= @cabinet_title %></h2>
</div>
<div class="pieceBody">

<div class="showMenu">
<% if @item.category == 1 %>
  <%= link_to '分類編集', @item.categorys_path %>
<% end %>
</div>

<div class="editingBox">
  <span class="btEdit"><%= link_to '編集', edit_doclibrary_cabinet_path(@item) %></span>
  <span class="btDestroy"><%= link_to '削除', doclibrary_cabinet_path(@item), confirm: '削除をすると元に戻せません。削除しますか', method: :delete %></span>
  <span class="docLink"><%= link_to '公開画面へ >>', @item.docs_path %></span>
</div>

<table class="show">
  <tr>
    <th class="blueIndex">状態</th>
    <td><%= @item.states[@item.state] %></td>
  </tr>
</table>

<table class="show">
  <tr>
    <th class="blueIndex">書庫名</th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th class="blueIndex">一覧表示行数</th>
    <td><%= @item.default_limit %></td>
  </tr>
</table>

<%= render '/gwboard/admin/adms/show' %>

<div class="btReturn">
  <%= link_to "管理一覧へ戻る", doclibrary_cabinets_path %>
</div>

</div>
</div>
