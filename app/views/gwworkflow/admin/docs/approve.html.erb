<div class="bbsDocList workflow">
<%= render 'piece_header', hide_new_action: true %>
<div class="pieceBody">

<%= render 'detail', hide_new_action: true %>

<%= form_for :committee, url: {action: 'commit'}, html: {method: :post, multipart: true, id: 'itemForm'} do |f| %>
<%= f.error_messages %>
  <table class="show bbsText">
    <tr>
      <th>コメント</th>
    </tr>
    <tr>
      <td><%= f.text_area :comment, style: 'width:100%; height:60pt' %></td>
    </tr>
  </table>
  <%= render '/gwworkflow/admin/share/users_route_editor', f: f %>
  <div class="submitters">
  <div align="center">
  <table>
    <tr>
      <td><%= f.submit '承認', id: 'item_submit_accept', name: 'accepted', data: { confirm: '承認してよろしいですか？' } %></td>
      <td><%= f.submit '却下', id: 'item_submit_reject', name: 'rejected', data: { confirm: '却下してよろしいですか？' } %></td>
      <td><%= f.submit '差し戻し', id: 'item_submit_remand', name: 'remanded', data: { confirm: '差し戻してよろしいですか？' } %></td>
    </tr>
  </table>
  </div>
  </div>
<% end %>

<!--戻るボタン-->
<div class="btReturn">
  <%= link_to '一覧へ戻る', {action: :index} %>
</div>

</div><!--pieceBody-->
</div><!--bbsDocList workflow-->

