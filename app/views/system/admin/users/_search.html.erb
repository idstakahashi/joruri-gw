<%= form_tag '', method: :get, class: 'search' do %>
<table>
  <tr>
    <th>キーワード</th>
    <td><%= text_field_tag :s_keyword, params[:s_keyword], size: 20 %></td>
    <th>状態</th>
    <td><%= select_tag :state, options_for_select([['全て', '']] + System::User.state_options, params[:state]) %></td>
    <th>LDAP同期</th>
    <td><%= select_tag :ldap, options_for_select([['全て', '']] + System::User.ldap_options, params[:ldap].present? ? params[:ldap].to_i : params[:ldap]) %></td>
    <th>所属グループ</th>
    <td><%= select_tag :group_id, options_for_select([['**所属未登録**','nil']] + System::Group.root.self_and_descendants.map{|g| [g.tree_name, g.id]}, params[:group_id]), include_blank: true %></td>
    <th>表示行数</th>
    <td><%= select_tag :limit, options_for_select(Gw.limit_select, params[:limit].to_i) %></td>
    <td class="submitters">
      <%= submit_tag '検索', name: :search %>
      <%= submit_tag 'リセット', name: :reset %>
    </td>
  </tr>
</table>
<% end %>
