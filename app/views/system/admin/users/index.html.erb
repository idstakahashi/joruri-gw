<div class="piece AdminSetting AdminUsers">
<%= render 'header' %>

<div class="pieceBody">
<%= render 'header_menu' %>

<div class="editingBox">
  <span class="btNew"><%= link_to '新規作成', {action: :new} %></span>
</div>
<%= render 'navi' %>
<%= render 'search' %>

<table class="index">
  <tbody>
    <tr>
      <th></th>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>役職</th>
      <th>状態</th>
      <th>LDAP同期</th>
      <th>所属グループ</th>
    </tr>
    <% @items.each do |item| %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td><%= link_to '詳細', {action: :show, id: item.id} -%></td>
      <td><%= item.code -%></td>
      <td><%= item.name -%></td>
      <td><%= item.email -%></td>
      <td><%= item.official_position -%></td>
      <td><%= System::UsersGroup.state_show(item.state) -%></td>
      <td><%= System::UsersGroup.ldap_show(item.ldap) -%></td>
      <td><%= item.show_group_name -%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>

</div>
</div>
