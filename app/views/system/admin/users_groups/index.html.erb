<div class="piece AdminSetting AdminUsersGroups">
<%= render 'header' %>

<div class="pieceBody">
<%= render '/system/admin/users/header_menu' %>
<%= render 'switching' %>
<%= render '/system/admin/groups/navi' %>

<div class="editingBox">
  <span class="btNew"><%= link_to '新規作成', {action: :new} %></span>
</div>

<% if @items.blank? %>
  <div class="notice">表示する項目はありません。</div>
<% else %>
<table class="index">
  <tbody>
    <tr>
      <th>詳細</th>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>役職</th>
      <th>LDAP同期</th>
      <th>状態</th>
      <th>本務・兼務</th>
    </tr>
    <% @items.each do |item| %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td><%= link_to '詳細', {action: :show, parent: item.group_id, id: item.id} %></td>
      <td><%= item.user_code %></td>
      <td><%= item.user.name if item.user %></td>
      <td><%= item.user.email if item.user %></td>
      <td><%= item.user.official_position if item.user %></td>
      <td><%= System::UsersGroup.ldap_show(item.user.ldap) if item.user %></td>
      <td><%= System::UsersGroup.state_show(item.user.state) if item.user %></td>
      <td><%= System::UsersGroup.job_order_show(item.job_order) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
<% end %>

</div>
</div>
