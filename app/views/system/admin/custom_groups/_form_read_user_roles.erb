<%
selected_read_user_options = @item.selected_read_user_options
%>
<table border="0">
  <tr>
    <td class="userChange">
      <%= select_tag :read_user_group_id, options_for_select(System::Group.enabled_group_options, Core.user_group.id) %><br />
      <%= select_tag :read_users, options_for_select(Core.user_group.enabled_user_options), multiple: true, size: 10, style: 'width:300px;' %>
    </td>
    <td>
      <%= button_tag '追加 →', type: :button, id: 'add_read_users' %><br /><br />
      <%= button_tag '← 削除', type: :button, id: 'del_read_users' %>
    </td>
    <td>
      <br />
      <%= select_tag :selected_read_users, options_for_select(selected_read_user_options), multiple: true, size: 10, style: 'width:300px;' %>
      <%= f.select :selected_read_user_ids, options_for_select(selected_read_user_options, selected_read_user_options.map{|o| o[1]}), {}, {multiple: true, style: 'display: none;'} %>
    </td>
  </tr>
</table>
