<%
selected_admin_group_options = @item.selected_admin_group_options
%>
<table border="0">
  <tr>
    <td class="userChange">
      <%= select_tag :admin_groups, options_for_select(System::Group.get_group_select('', '', :add_conditions=>"level_no = 3"), Core.user_group.id), size: 10, style: 'width:300px;', multiple: true -%>
    </td>
    <td>
      <%= button_tag '追加 →', type: :button, id: 'add_admin_groups' -%><br /><br />
      <%= button_tag '← 削除', type: :button, id: 'del_admin_groups' -%>
    </td>
    <td>
      <br />
      <%= select_tag :selected_admin_groups, options_for_select(selected_admin_group_options), size: 10, style: 'width:300px;', multiple: true -%>
      <%= f.select :selected_admin_group_ids, options_for_select(selected_admin_group_options, selected_admin_group_options.map{|o| o[1]}), {}, {multiple: true, style: 'display: none;'} -%>
    </td>
  </tr>
</table>
