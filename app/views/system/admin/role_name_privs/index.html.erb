<div class="piece AdminMessage">
<%= render 'header' %>
<div class="pieceBody">
<%= render 'system/admin/roles/header_menu' %>

<div class="editingBox">
  <span class="btNew"><%= link_to '新規作成', {action: :new} %></span>
</div>
<%= render 'search' %>

<table class="index">
  <tbody>
    <tr>
      <th style="width: 60px;"></th>
      <th>機能名</th>
      <th>権限名</th>
    </tr>
    <% @items.each do |item| %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td style="text-align: center;"><%= link_to '詳細', {action: :show, id: item.id} %></td>
      <td><%= item.role.display_name if item.role %></td>
      <td><%= item.priv.display_name if item.priv %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  
<br/>
<%= paginate @items %>
<br/>

</div>
</div>
