<%
roles = 
  if @is_dev
    System::RoleName.all.order(sort_no: :asc)
  else
    System::RoleName.where.not(table_name: "gwsub").order(sort_no: :asc)
  end
%>

<%= form_tag '', method: :get, class: 'search', name: 'frmSearch' do %>
<table>
  <tr>
    <td>機能名</td>
    <td><%= select_tag :role_id, options_for_select([['すべて', '']] + roles.map{|r| [r.display_name, r.id]}, params[:role_id].to_i), onchange: 'submit();' %></td>
    <td><%= submit_tag 'リセット', name: :reset %></td>
  </tr>
</table>
<% end %>
