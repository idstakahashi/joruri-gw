<div class="piece AdminSetting AdminUsers">
<%= render 'header' %>

<div class="pieceBody">
<%= render 'system/admin/users/header_menu' %>
<%= render 'menu' %>

<h3>CSV出力</h3>
<div class="user_explanation">
  出力対象を、指定の文字コードで出力します。<br />
  保存先は、ダウンロード時に指定できます。
</div>

<%= form_for :item, url: url_for(action: :csvget), html: {method: :get, multipart: true} do |f| %>
  <table class="show">
    <tr>
      <th></th>
      <td>文字コードを選択して実行してください</td>
    </tr>
    <tr>
      <th>文字コード</th>
      <td><%= f.radio_buttons :encoding, @item.encoding_options %></td>
    </tr>
  </table>
  <div class="submitters">
    <%= f.submit 'CSV出力' %>
  </div>
<% end %>
</div>
</div>