<div class="piece AdminMessage">
<%= render 'header' %>
<div class="pieceBody">
<%= render 'system/admin/roles/header_menu' %>

<div class="editingBox">
  <span class="btNew"><%= link_to '新規作成', {action: :new} %></span>
</div>

<table class="index">
  <tbody>
    <tr>
      <th style="width: 60px;"></th>
      <th>機能名</th>
      <th>機能コード</th>
      <th style="width: 40px; text-align: center;">表示順</th>
    </tr>
    <% @items.each do |item| %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td style="text-align: center;"><%= link_to '詳細', {action: :show, id: item.id} %></td>
      <td><%= item.display_name %></td>
      <td><%= item.table_name %></td>
      <td style="text-align: center;"><%= item.sort_no %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>

</div>
</div>
