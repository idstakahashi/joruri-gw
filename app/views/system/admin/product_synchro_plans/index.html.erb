<div class="piece AdminMessage">
<%= render 'header' %>

<div class="pieceBody">
<%= render 'menu' %>

<div class="editingBox">
  <span class="btNew"><%= link_to '新規作成', new_system_product_synchro_plan_path %></span>
</div>

<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 60px; text-align: center;">状態</th>
    <th style="width: 150px; text-align: center;">予定日時</th>
    <th style="text-align: center;"></th>
    <th style="width: 60px; text-align: center;">削除</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td style="text-align: center;"><%= link_to '詳細', system_product_synchro_plan_path(:id => item.id) %></td>
    <td style="text-align: center;"><%= item.state_label %></td>
    <td style="text-align: center;"><%= item.start_at.strftime('%Y-%m-%d %H:%M') if item.start_at %></td>
    <td style="text-align: center;"></td>
    <td style="text-align: center;"><%= link_to '削除', system_product_synchro_plan_path(:id => item.id), :method => :delete, :confirm => '削除してよろしいですか？' %></td>
  </tr>
  <% end %>
</table>

<%= paginate @items %>

</div>
</div>
