<h1>
<div class="headerTop">
<%= link_to image_tag('/_common/themes/gw/files/mobile/header-logo.gif', { :border => '0', :alt => 'Joruriグループウェア'}), '/' %>
</div>
</h1>
<% if Core.user %>
<span class="name"><%= Core.user.display_name %></span>
<% end %>
<hr class="borderDash"/>
<%
recent_mail = session[:recent_mail]
%>
<% if recent_mail == "0" or recent_mail.blank? or recent_mail == "-1" %>
<p class="mobileMail"><img src="/_common/themes/gw/files/mobile/ic-mobile-mail.gif"><%= link_to  "メール" ,"/_admin/gw/link_sso/redirect_to_joruri?to=mail",:target=>"_blank" -%></p>
<% else %>
<p class="mobileMail"><img src="/_common/themes/gw/files/mobile/ic-mobile-mail.gif"><%= link_to  raw("<b>メール（#{recent_mail}）</b>") ,"/_admin/gw/link_sso/redirect_to_joruri?to=mail",:target=>"_blank" -%></p>
<% end %>
