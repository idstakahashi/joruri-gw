<div class="gwsub sb01">
<div class="pieceHeader">
<h2>研修申込・受付</h2>
</div>
<div class="pieceBanner">
<%= render 'gwsub/admin/sb01/sb01_training_boards/menu' %>
</div>
<div class="pieceBody">
<% if @items.blank? %>
  <div class="notice">表示する項目はありません。</div>
<%else%>
  <table class="index">
    <tbody>
      <tr>
        <th>詳細</th>
        <th>掲示板名称</th>
      </tr>
  <% @items.each do |item|
    bbs_item = Gwbbs::Control.where(:id => item.options, :state => 'public').first
  %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= link_to "詳細", url_for({:action => :show, :id => item.id}) %></td>
    <td><%= bbs_item.blank? ? "" : bbs_item.title %></td>
  </tr>
  <% end%>
  </tbody></table>
  <%= paginate @items%>
<% end %>
<br/>
</div>
</div>
