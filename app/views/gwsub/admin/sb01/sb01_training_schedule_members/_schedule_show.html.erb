<%
state = Gwsub::Sb01TrainingSchedule.state_show(@ts.state)
%>
<table class="show  leftSide">
  <tr>
    <th>受付</th>
    <td><%= state %></td>
  </tr>
  <tr>
    <th>場所</th>
    <td><%= @ts.prop_name%></td>
  </tr>
  <tr>
    <th>定員</th>
    <td><%= @ts.members_max %></td>
  </tr>
  <tr>
    <th>申込人数</th>
    <td><%= @ts.members_current %></td>
  </tr>
  <tr>
    <th>企画所属 </th>
    <td><%= safe{@ts.training.group_name} %></td>
  </tr>
  <tr>
    <th>企画者</th>
    <td><%= safe{@ts.training.member_name} %></td>
  </tr>
  <tr>
    <th>連絡先電話番号</th>
    <td><%= safe{@ts.training.member_tel} %></td>
  </tr>
  <tr>
    <th>最終更新日</th>
    <td><%= safe{@ts.updated_at.strftime('%Y-%m-%d')} %></td>
  </tr>
</table>
