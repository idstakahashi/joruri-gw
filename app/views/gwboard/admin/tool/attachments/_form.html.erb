<%
  #本来は一ヶ所で判別するのが良いが、変更の過渡期なのでわけてある。
  files_uri = gwboard_attachments_path(item.id) + "?system=#{item.system_name}&title_id=#{item.title_id}"
  if ["digitallibrary", "gwbbs", "gwfaq", "gwqa", 'doclibrary'].index(item.system_name)  && item.wiki_enabled?
    files_uri += "&wiki=1"
  end
%>
<table class="bbsFile">
  <tr>
    <th>添付ファイル</th>
    <td>
      <a href="#" onclick="chageDisp(this,'attach_form');return false;">開く▼</a>
    </td>
  </tr>
</table>

<table id="attach_form" border="0" class="show" style="display: none;">
  <tr>
    <td style="padding: 0px 0px;">
      <iframe id="file_attach_form" src="<%= files_uri %>" style="width: 100%; height: 500px;" frameborder="0"></iframe>
    </td>
  </tr>
</table>