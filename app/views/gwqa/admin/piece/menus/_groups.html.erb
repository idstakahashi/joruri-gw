<h3 class="iconSideGroup">所属
  <span class="<%= 'current' if params[:state] == 'GROUP' %>">
    <%= link_to '所属', "#{gwqa_docs_path({:title_id => @title.id})}&state=GROUP" %>
  </span>
</h3>
<ul>
<% @groups.each do |group| %>
  <% next if @group_doc_counts[group.code].blank? %>
  <% group_name = "・#{group.name}(#{@group_doc_counts[group.code]})" %>
  <li><%= link_to group_name, gwqa_docs_path(title_id: @title.id) + "&state=GROUP&grp=#{group.code}" %></li>
<% end %>
</ul>
