<div class="sideMenu">
<div class="menuBody">
<%= render 'search' %>
<%=raw @title.other_system_link unless @title.other_system_link.blank? %>
<% unless @title.left_index_use == '0' %>
  <%#所属の時は、所属-分類-月別%>
  <% case params[:state] %>
  <% when "GROUP" %>
    <%= render 'groups'     if @title.group_view %>
    <%= render 'categories' if @title.categoey_view %>
    <%= render 'monthlies'  if @title.monthly_view %>
  <%#分類の時は、分類-所属-月別%>
  <% when "CATEGORY" %>
    <%= render 'categories' if @title.categoey_view %>
    <%= render 'groups'     if @title.group_view %>
    <%= render 'monthlies'  if @title.monthly_view %>
  <%#上記以外の時は、最新10件-月別-分類%>
  <% else %>
    <%#render 'normal' %>
    <%= render 'monthlies'  if @title.monthly_view %>
    <%= render 'categories' if @title.categoey_view %>
    <%= render 'groups'     if @title.group_view %>
  <% end %>
<% end %>
</div>
</div>
