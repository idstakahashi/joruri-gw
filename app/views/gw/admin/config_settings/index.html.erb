<div class="piece AdminSetting">
<%= render 'header_str' %>
<div class="pieceBanner"></div>
<div class="pieceBody">
<%= render 'menu' if @u_role==true || @role_hcs%>

<%# 管理者・編集者には、切替タブを表示 %>
<%if @u_role == true %>
  <% if @admin_role == true %>
    <%= render 'tabs_admin' %>
  <% else %>
    <%= render 'tabs_editor' %>
  <% end %>
<% end %>

<% if @u_role ==true %>
  <% if params[:c1].to_i==1 %>
    <% if @admin_role == true %>
      <%# システム管理者用メニュー %>
      <%= render 'index_admin' %>
    <% else %>
      <%# 特定機能の編集者用メニュー %>
      <%= render 'index_editor' %>
    <% end %>
  <% else %>
    <%# 個人設定メニュー %>
    <%= render 'index_ind' %>
  <% end %>
<% else %>
  <%# 個人設定メニュー %>
  <%= render 'index_ind' %>
<% end %>

</div>
</div>
