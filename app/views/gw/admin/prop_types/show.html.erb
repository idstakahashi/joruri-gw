<div class="piece prop index">

<div class="pieceHeader">
<%= render 'piece_header' %>
</div>
<div class="pieceBody">
<div class="pieceBodyHeader">
</div>
<%= render '/gw/admin/prop_others/prop_master_menu' %>
<%= render 'titleline' %>

<div class="pieceBodyBody">
<div class="editingBox">
  <span class="btEdit"><%= link_to "編集", :action => :edit, :id => @item.id %></span>
  <span class="btDestroy"><%= link_to_destroy @item.id, :confirm => "カテゴリを削除した場合、そのカテゴリに属する施設は予約できなくなります。削除してよろしいですか？" %></span>
</div>

<table class="show">
  <tr>
    <th>カテゴリ名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>並び順</th>
    <td><%= @item.sort_no %></td>
  </tr>
  <tr>
    <th>参加可能ユーザを制限する</th>
    <td>
      <%= @item.restricted_show -%>
      <%= link_to "＞＞#{@item.user_str_show}登録", url_for(:controller => "gw/admin/prop_types/users", :action => :index, :prop_type_id => @item.id) if @item.restricted? %>
    </td>
  </tr>
  <tr>
    <th>「参加者」代替テキスト</th>
    <td><%= @item.user_str_show %></td>
  </tr>
</table>

<div class="btReturn">
  <%= link_to '一覧へ戻る', '/gw/prop_types' %>
</div>
</div>
</div>
</div>
