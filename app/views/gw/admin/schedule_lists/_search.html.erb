<%= form_tag '', method: :get, class: 'search', name: 'search' do -%>
<%= hidden_field_tag :uid, params[:uid] %>
<table class="noBorderTable">
  <tr>
    <% year = Date.today.year %>
    <td><%= select_tag :s_year, options_for_select(((year - 5)..(year + 5)).to_a, @s_year), onchange: "select_year()" %> 年</td>
    <td><%= select_tag :s_month, options_for_select([['すべて', 0], ['今月以降すべて', 100]] + (1..12).to_a, @s_month), onchange: "select_month()" %> 月</td>
  </tr>
</table>
<% end -%>
