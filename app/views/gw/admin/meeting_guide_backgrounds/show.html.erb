<div class="piece AdminSetting">
<%= render 'header_str' %>
<div class="pieceBody">
<%= render 'menu' %>

<div class="editingBox">
  <span class="btEdit">
  <%= link_to '編集', {action: :edit} %>
  </span>
  <span class="btDestroy">
  <%= link_to '削除', {action: :destroy}, method: :delete, confirm: "削除してよろしいですか？" %>
  </span>
</div>
<table class="show">
  <tr>
    <th>公開</th>
    <td><span style="<%= 'color:red;' if @item.published != 'opened' %>"><%= @item.published_label %></span></td>
  </tr>
  <tr>
    <th>並び順</th>
    <td><%= @item.sort_no %></td>
  </tr>
  <tr>
    <th>ファイルパス</th>
    <td><%= @item.file_path %></td>
  </tr>
  <tr>
    <th>ファイル名</th>
    <td><%= @item.file_name %></td>
  </tr>
  <tr>
    <th>画像</th>
    <td><img src="<%= @item.file_path -%>" /></td>
  </tr>
  <tr>
    <th>背景色</th>
    <td><%= @item.background_color_label %></td>
  </tr>
  <tr>
    <th>地域</th>
    <td><%= @item.area_label %></td>
  </tr>
  <tr>
    <th>キャプション</th>
    <td><%= @item.caption %></td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%=l @item.created_at if @item.created_at %></td>
  </tr>
  <tr>
    <th>更新日</th>
    <td><%=l @item.updated_at if @item.updated_at %></td>
  </tr>
</table>

<div class="btReturn">
  <%= link_to '一覧', {action: :index} -%>
</div>

</div>
</div>
