<%= f.hidden_field :sort_no %>

<table class="show">
  <tr>
    <th>状態 <%= required %></th>
    <td><%= f.radio_buttons :state, @item.states %></td>
  </tr>
  <tr>
    <th>並び順</th>
    <td><%= @item.sort_no %></td>
  </tr>
  <tr>
    <th>表示名 <%= required %></th>
    <td><%= f.text_field :title, :size => 80 %></td>
  </tr>
  <tr>
    <th>モデル名 <%= required %></th>
    <td><%= f.text_field :name, :size => 80, :class => 'IMEoff' %></td>
  </tr>
  <tr>
    <th>CSSクラス名 <%= required %></th>
    <td><%= f.text_field :css_name, :size => 80, :class => 'IMEoff' %></td>
  </tr>
</table>

<div class="preserve">
  <%= f.submit '保存' %>
</div>
