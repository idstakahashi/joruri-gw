<% 
javascript_fname = 'search_submit();'
grouplist = Gwsub.grouplist4(nil, 'all', true ,nil , nil, :return_pattern => 2)
%>
<%= form_tag '', :method => :get, :class => 'search', :name => 'search' do %>
  <%= hidden_field_tag :sort_keys, params[:sort_keys] unless params[:sort_keys].blank? %>
  <table>
    <tr>
      <td>主管課担当 <%= select_tag :s_m_gid, options_for_select(grouplist, @s_m_gid), :onchange => javascript_fname %></td>
      <td>部局・所属 <%= select_tag :s_d_gid, options_for_select(grouplist, @s_d_gid), :onchange => javascript_fname %></td>
    </tr>
  </table>
<% end %>
