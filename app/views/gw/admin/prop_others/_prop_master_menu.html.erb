  <div class="btMonthLink btIndex"><%=link_to '月表示', {controller: '/gw/admin/schedule_props', action: :show_month, prop_id: @item.id, s_data: Time.now.strftime("%Y%m%d"), type_id: @item.type_id, s_genre: "other"} -%></div>
  <% end -%>
</div>
