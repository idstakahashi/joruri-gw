  <a href="/gw/prop_others"><span class="<%= "current_menu" if controller_path == "gw/admin/prop_others" -%>">一般施設マスタ</span></a>
  <% if @is_gw_admin %>
  <a href="/gw/prop_other_limits"><span class="<%= "current_menu" if controller_path == "gw/admin/prop_other_limits" -%>">一般施設マスタ件数制限</span></a>
  <a href="/gw/prop_types"><span class="<%= "current_menu" if controller_path =~ %r(^gw/admin/prop_types) -%>">施設種別マスタ</span></a>
