<div class="btBox">
  <div class="btEtc btHead btRight"><%= link_to '会議室', {controller: '/gw/admin/schedule_props', action: :show_week, s_data: Time.now.strftime("%Y%m%d"), s_genre: "meetingroom"} -%></div>
  <div class="btEtc btHead btRight"><%= link_to 'レンタカー', {controller: '/gw/admin/schedule_props', action: :show_week, s_data: Time.now.strftime("%Y%m%d"), s_genre: "rentcar"} -%></div>
  <div class="btEtc btHead currentHead">一般施設</div>
  <div class="btDayLink btIndex"><%=link_to '日表示', {controller: '/gw/admin/schedule_props', action: :show, id: Time.now.strftime("%Y%m%d"), s_genre: "other"} -%></div>
  <div class="btWeekLink btIndex"><%=link_to '週表示', {controller: '/gw/admin/schedule_props', action: :show_week, s_data: Time.now.strftime("%Y%m%d"), s_genre: "other"} -%></div>
